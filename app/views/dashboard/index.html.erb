<section id="promo" class="section offset-header has-pattern top-30">
  <div class="container">
    <div class="row">

    <%= render 'sections' %>

    </div>

    <div class="row">

      <div class="col-md-6">
        <!-- recent users -->
        <div class="panel panel-default">
          <!-- Default panel contents -->
          <div class="panel-heading">Recent Users</div>
          <div class="panel-body">
            <p>Below is a list recently registered users.</p>
          </div>

          <!-- Table -->
          <table class="table">
            <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Location</th>
              <th>Join Date</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each_with_index do |user, index| %>
            <tr>
              <td><%= index += 1 %></td>
              <td><%= user.name %></td>
              <td><%= user.location ? user.location : "-" %></td>
              <td><%= user.created_at.strftime("%d %B %Y") %></td>
            </tr>

            <% end %>

            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">Compose Message <span class="pull-right badge" id="counter"></span> </div>
          <div class="panel-body">
            <%= render 'shared/alert' %>
            <%= form_tag(sms_path, { class: ""}) do %>
                <div class="form-group">
                    <%= text_area_tag :message, nil , class: "form-control", rows: 4 %>
                </div>
                <div class="col-sm-3">
                  <div class="checkbox">
                    <label>
                      <%= check_box_tag :all_users %> Send to all
                    </label>
                  </div>
                </div>

                <div class="col-sm-4">
                  <div class="checkbox">
                    <label>
                      <%= check_box_tag :only_location %> Only with location
                    </label>
                  </div>
                </div>

                <div class="col-sm-5">
                  <div class="checkbox">
                    <label>
                      <%= check_box_tag :only_submission %> Only with submissions
                    </label>
                  </div>
                </div>


                <div class="form-group">
                 <%= submit_tag "Send Message", class: "btn btn-primary" %>
                </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>

    </div>
  </div>
</section>